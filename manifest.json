{
    "manifest_version": 3,
    "name": "ChromaPass Manager",
    "version": "1.0",
    "description": "A secure, native password manager.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/icon128.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}